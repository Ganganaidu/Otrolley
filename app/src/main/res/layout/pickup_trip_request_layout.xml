<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pic_trip_status_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/pic_trip_count_textView"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/gray_light_dark" />

                <TextView
                    android:id="@+id/pic_trip_count_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:padding="3dp"
                    android:text="1/2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_light_dark" />

            </RelativeLayout>

            <TextView
                android:id="@+id/pic_trip_user_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="1dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pic_trip_pnumber_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="1dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/pic_trip_address_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="1dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/pic_trip_time_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="1dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/bg" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
